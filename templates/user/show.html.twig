{% extends 'base.html.twig' %}

{% block title %}{{controller_name}}{% endblock %}

{% block body %}
    <h1>utilisateur</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>ID</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>Roles</th>
                <td>
                    {% for role in user.roles %}
                            {% if role == "ROLE_USER" %}
                                Utilisateur
                            
                            {% elseif role == "ROLE_ADMIN" %}
                                Administrateur
                            {% endif %}
                    {% endfor %}
                </td>
            </tr>
            <tr>
                <th>Mot de passe</th>
                <td>{{ user.password }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('user_index') }}" class="btn btn-success">Retour Ã  la liste</a>

    <a href="{{ path('user_edit', {'id': user.id}) }}"><button class="btn btn-warning"style="margin-right: 15px;">Modifier</button></a>

    {{ include('user/_delete_form.html.twig') }}
{% endblock %}
